{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "ES6",
    "target": "ES2022",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node10"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
